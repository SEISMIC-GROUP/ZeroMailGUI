{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openrouter": {
      "options": {
        "apiKey": "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",
        "baseURL": "https://openrouter.ai/api/v1"
      }
    }
  },
  "model": "openrouter/openai/gpt-5",
  "small_model": "openrouter/anthropic/claude-sonnet-4",
  "disabled_providers": ["openai", "anthropic", "google"],
  "mcpServers": {
    "playwright-a": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--isolated",
        "--headless",
        "--browser",
        "chromium",
        "--viewport-size",
        "1920,1080"
      ],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "0"
      },
      "disabled": false
    },
    "playwright-b": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--isolated",
        "--headless",
        "--browser",
        "chromium",
        "--viewport-size",
        "390,844"
      ],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "0"
      },
      "disabled": false
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "env": {},
      "disabled": false
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {},
      "disabled": false
    },
    "perplexity-ask": {
      "command": "npx",
      "args": [
        "-y",
        "server-perplexity-ask"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      },
      "disabled": false
    },
    "brightdata": {
      "command": "npx",
      "args": [
        "-y",
        "@brightdata/mcp"
      ],
      "env": {
        "API_TOKEN": "${BRIGHTDATA_API_TOKEN}"
      },
      "disabled": false
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {},
      "disabled": false
    }
  },
  "permission": {
    "edit": "allow",
    "write": "allow",
    "bash": "ask",
    "read": "allow"
  },
  "autoupdate": true,
  "theme": "dark"
}