{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  },
  "tools": {
    "context7*": true,
    "perplexity*": true,
    "brightdata*": true,
    "playwright*": true,
    "sequential-thinking*": true,
    "fetch*": true
  },
  "keybinds": {
    "session_child_cycle": "ctrl+shift+right",
    "session_child_cycle_reverse": "ctrl+shift+left"
  },
  "disabled_providers": ["amazon-bedrock"],
  "agent": {
    "build": {
      "description": "Primary development agent with implementation tools enabled",
      "mode": "primary",
      "model": "openrouter/anthropic/claude-3.5-sonnet",
      "temperature": 0.25,
      "prompt": "You are BUILD, the primary orchestrator agent. Use MCP tools directly when available.",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true,
        "brightdata*": true,
        "playwright*": true,
        "sequential-thinking*": true,
        "fetch*": true
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "allow",
          "git push": "ask",
          "terraform *": "deny"
        },
        "webfetch": "ask"
      }
    },
    "general": {
      "description": "General-purpose agent for research and multi-step tasks",
      "mode": "primary",
      "model": "openrouter/anthropic/claude-3.5-haiku",
      "temperature": 0.2,
      "prompt": "You are a general-purpose agent. Use MCP tools directly for research and implementation.",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true,
        "playwright*": true,
        "sequential-thinking*": true,
        "fetch*": true
      },
      "permission": {
        "edit": "allow",
        "bash": "allow",
        "webfetch": "allow"
      }
    },

    "build-gpt5": {
      "description": "Primary orchestrator using GPT-5 for implementation and delegation",
      "mode": "primary",
      "model": "openrouter/openai/gpt-5",
      "temperature": 0.25,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true,
        "brightdata*": true,
        "playwright*": true,
        "sequential-thinking*": true,
        "fetch*": true
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "allow",
          "git push": "ask",
          "terraform *": "deny"
        },
        "webfetch": "ask"
      },
      "reasoningEffort": "medium"
    },

    "build-opus": {
      "description": "Primary orchestrator using Claude Opus for complex reasoning and planning handoffs",
      "mode": "primary",
      "model": "openrouter/anthropic/claude-opus-4.1",
      "temperature": 0.25,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true,
        "brightdata*": true,
        "playwright*": true,
        "sequential-thinking*": true,
        "fetch*": true
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "allow",
          "git push": "ask",
          "terraform *": "deny"
        },
        "webfetch": "ask"
      }
    },

    "planner-gpt5": {
      "description": "Core planner (read-only). Decomposes tasks and outputs a machine-executable plan JSON.",
      "mode": "subagent",
      "model": "openrouter/openai/gpt-5",
      "temperature": 0.15,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true,
        "fetch*": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "ask"
      }
    },

    "planner-opus": {
      "description": "Core planner (read-only) with advanced reasoning for ambiguous objectives.",
      "mode": "subagent",
      "model": "openrouter/anthropic/claude-opus-4.1",
      "temperature": 0.15,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true,
        "fetch*": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "ask"
      }
    },

    "coder-sonnet-fast": {
      "description": "Fast, surgical code edits using Sonnet; minimal diffs.",
      "mode": "subagent",
      "model": "openrouter/anthropic/claude-sonnet-4",
      "temperature": 0.2,
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": false
      },
      "permission": {
        "edit": "allow",
        "bash": "deny",
        "webfetch": "deny"
      }
    },

    "coder-sonnet-deep": {
      "description": "Refactors and multi-file consistency using Sonnet; deeper analysis.",
      "mode": "subagent",
      "model": "openrouter/anthropic/claude-sonnet-4",
      "temperature": 0.2,
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "context7*": true
      },
      "permission": {
        "edit": "allow",
        "bash": "deny",
        "webfetch": "ask"
      }
    },

    "coder-gpt5-fast": {
      "description": "Quick, targeted modifications on GPT-5 with low reasoning effort.",
      "mode": "subagent",
      "model": "openrouter/openai/gpt-5",
      "temperature": 0.25,
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": false
      },
      "permission": {
        "edit": "allow",
        "bash": "deny",
        "webfetch": "deny"
      },
      "reasoningEffort": "low"
    },

    "coder-gpt5-deep": {
      "description": "Complex refactors and multi-step implementations on GPT-5 with high reasoning effort.",
      "mode": "subagent",
      "model": "openrouter/openai/gpt-5",
      "temperature": 0.2,
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true
      },
      "permission": {
        "edit": "allow",
        "bash": "deny",
        "webfetch": "ask"
      },
      "reasoningEffort": "high"
    },

    "reviewer-sonnet": {
      "description": "Read-only reviewer for security, performance, and maintainability.",
      "mode": "subagent",
      "model": "openrouter/anthropic/claude-sonnet-4",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow"
      }
    },

    "reviewer-gpt5": {
      "description": "Read-only reviewer on GPT-5 for deep analysis.",
      "mode": "subagent",
      "model": "openrouter/openai/gpt-5",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "context7*": true,
        "perplexity*": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow"
      }
    }
  },
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "environment": {},
      "enabled": true
    },
    "fetch": {
      "type": "local",
      "command": ["uvx", "mcp-server-fetch"],
      "environment": {},
      "enabled": true
    },
    "playwright-headless-a": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest",
        "--isolated",
        "--headless",
        "--user-data-dir",
        ".playwright-mcp/session-a"
      ],
      "environment": {},
      "enabled": true
    },
    "playwright-headless-b": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest",
        "--isolated",
        "--headless",
        "--user-data-dir",
        ".playwright-mcp/session-b"
      ],
      "environment": {},
      "enabled": true
    },
    "perplexity-ask": {
      "type": "local",
      "command": ["npx", "-y", "server-perplexity-ask"],
      "environment": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      },
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "brightdata": {
      "type": "local",
      "command": ["npx", "-y", "@brightdata/mcp"],
      "environment": {
        "API_TOKEN": "${BRIGHTDATA_API_TOKEN}"
      },
      "enabled": true
    }
  }
}
